DirectoryIndex public/index.php

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Serve existing files/directories directly.
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Front controller.
    RewriteRule ^ public/index.php [L,QSA]
</IfModule>
